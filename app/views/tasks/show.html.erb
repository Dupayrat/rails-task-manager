<h2><%= @task.title %></h2>

<p><%= @task.details %></p>
<p><%= @task.completed %></p>
<p><%= link_to("Back to list", tasks_path(@path)) %><p>

<%= link_to"Edit #{@task.title}", edit_task_path  %>


<%= link_to"Delete #{@task.title}",
      task_path(@task),
      method: :delete,
      data: {confirm: "Do you really want to delete #{@task.title}?"} %>


